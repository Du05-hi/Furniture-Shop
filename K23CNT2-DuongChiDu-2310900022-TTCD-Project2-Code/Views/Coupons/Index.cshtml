@model IEnumerable<FurnitureShop.Models.Coupon>
@{
    ViewData["Title"] = "Quản lý mã giảm giá";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-uppercase">
            <i class="bi bi-ticket-perforated"></i> Quản lý Mã Giảm Giá
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm Mã Mới
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-bordered align-middle text-center">
                <thead class="table-dark text-uppercase small">
                    <tr>
                        <th>ID</th>
                        <th>Mã giảm giá</th>
                        <th>Phần trăm</th>
                        <th>Ngày hết hạn</th>
                        <th>Kích hoạt</th>
                        <th>Mô tả</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td class="fw-bold">@item.Code</td>
                            <td>@item.DiscountPercent %</td>
                            <td>@(item.ExpiryDate?.ToString("dd/MM/yyyy") ?? "Không có")</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Tắt</span>
                                }
                            </td>
                            <td>@item.Description</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa mã này không?')">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            <i class="bi bi-info-circle"></i> Hiện chưa có mã giảm giá nào.
        </div>
    }
</div>
