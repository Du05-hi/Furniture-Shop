                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- üíé N·ªôi dung ch√≠nh -->
    <main style="padding-top:90px">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- ‚öôÔ∏è Footer -->
    <footer class="bg-dark text-light text-center py-4 mt-5 shadow-sm">
        <div class="container">
            <p class="mb-1">¬© @DateTime.Now.Year - <strong>FurnitureShop</strong>. All rights reserved.</p>
            <p class="small mb-0">
                <i class="bi bi-geo-alt"></i> L√™ Tr·ªçng T·∫•n, H√† ƒê√¥ng |
                <i class="bi bi-envelope"></i> support@furnitureshop.vn |
                <i class="bi bi-telephone"></i> 0123 456 789
            </p>
        </div>
    </footer>

    <!-- Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- ‚úÖ Toast th√¥ng b√°o -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        @if (TempData["success"] != null)
        {
            <div class="toast align-items-center text-bg-success border-0 show" role="alert">
                <div class="d-flex">
                    <div class="toast-body fw-semibold">@TempData["success"]</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        }
        @if (TempData["error"] != null)
        {
            <div class="toast align-items-center text-bg-danger border-0 show" role="alert">
                <div class="d-flex">
                    <div class="toast-body fw-semibold">@TempData["error"]</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        }
    </div>

    <!-- üåô JS cho Dark mode + Toast -->
    <script>
        // Hi·ªÉn th·ªã Toast t·ª± ƒë·ªông
        document.querySelectorAll('.toast').forEach(el => {
            const toast = new bootstrap.Toast(el, { delay: 3000 });
            toast.show();
        });

        // Dark mode toggle
        const toggleBtn = document.getElementById('toggleTheme');
        const body = document.body;

        toggleBtn.addEventListener('click', () => {
            body.classList.toggle('dark-mode');
            const mode = body.classList.contains('dark-mode') ? 'dark' : 'light';
            localStorage.setItem('theme', mode);
            toggleBtn.innerText = mode === 'dark' ? '‚òÄÔ∏è Light' : 'üåô Dark';
        });

        window.onload = () => {
            const saved = localStorage.getItem('theme');
            if (saved === 'dark') {
                body.classList.add('dark-mode');
                toggleBtn.innerText = '‚òÄÔ∏è Light';
            }
        };
    </script>

    <style>
        /* üåó Dark mode giao di·ªán */
        .dark-mode {
            background-color: #121212 !important;
            color: #eaeaea !important;
        }

            .dark-mode .navbar, .dark-mode footer {
                background-color: #1f1f1f !important;
                color: #fff !important;
            }

            .dark-mode .card {
                background-color: #1e1e1e;
                color: #fff;
                border: 1px solid #333;
            }

            .dark-mode .btn-outline-primary {
                color: #80bfff;
                border-color: #80bfff;
            }

                .dark-mode .btn-outline-primary:hover {
                    background-color: #80bfff;
                    color: #000;
                }

            .dark-mode .form-control, .dark-mode .form-select {
                background-color: #2c2c2c;
                color: #eee;
                border: 1px solid #444;
            }

            .dark-mode .dropdown-menu {
                background-color: #222;
                color: #eee;
            }

        .navbar .nav-link:hover {
            text-decoration: underline;
        }
    </style>
</body>
</html>
