                        </a>
                    </li>

                    @* üíñ Th√™m menu Y√™u th√≠ch (m·ªõi th√™m) *@
                    @if (User.Identity?.IsAuthenticated ?? false && User.IsInRole("User"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Wishlist"?"active":"")"
                               asp-controller="Wishlist" asp-action="Index">
                                <i class="bi bi-heart-fill text-danger"></i> Y√™u th√≠ch
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Orders"?"active":"")"
                               asp-controller="Orders" asp-action="Index">
                                <i class="bi bi-cart-check"></i> ƒê∆°n h√†ng
                            </a>
                        </li>
                    }
                </ul>

                <!-- Menu ph·∫£i -->
                <ul class="navbar-nav align-items-center">
                    <!-- üåó N√∫t ƒë·ªïi giao di·ªán -->
                    <li class="nav-item">
                        <button id="toggleTheme" class="btn btn-outline-light btn-sm ms-2">üåô Dark</button>
                    </li>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white ms-3 me-2">
                                <i class="bi bi-person-circle"></i> Xin ch√†o, <strong>@User.Identity!.Name</strong>
                            </span>
                        </li>

                        @* Menu ADMIN *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-gear-fill"></i> Qu·∫£n tr·ªã
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                    <li>
                                        <a class="dropdown-item" asp-controller="AdminProducts" asp-action="Index">
                                            <i class="bi bi-box"></i> Qu·∫£n l√Ω s·∫£n ph·∫©m
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="AdminUsers" asp-action="Index">
                                            <i class="bi bi-people"></i> Qu·∫£n l√Ω ng∆∞·ªùi d√πng
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Coupons" asp-action="Index">
                                            <i class="bi bi-ticket-perforated"></i> Qu·∫£n l√Ω Coupon
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Orders" asp-action="AdminIndex">
                                            <i class="bi bi-bag-check"></i> Qu·∫£n l√Ω ƒë∆°n h√†ng
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                            <i class="bi bi-bar-chart-line"></i> Th·ªëng k√™ & bi·ªÉu ƒë·ªì
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        <!-- ƒêƒÉng xu·∫•t -->
                        <li class="nav-item ms-2">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-outline-light">
                                    <i class="bi bi-box-arrow-right"></i> ƒêƒÉng xu·∫•t
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <!-- Ch∆∞a ƒëƒÉng nh·∫≠p -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> ƒêƒÉng nh·∫≠p
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">
