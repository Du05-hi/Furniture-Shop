@model IEnumerable<FurnitureShop.Models.Wishlist>
@{
    ViewData["Title"] = "Danh sách yêu thích";
}

<h2 class="fw-bold mb-4 text-center">❤️ Danh sách yêu thích của bạn</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        Bạn chưa có sản phẩm yêu thích nào.
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm h-100 border-0">
                    <img src="@(item.Product?.ImageUrl ?? "/images/no-image.png")"
                         class="card-img-top" style="height:250px;object-fit:cover" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">@item.Product?.Name</h5>
                        <p class="text-muted">@($"{item.Product?.Price:N0} đ")</p>

                        <div class="mt-auto d-flex justify-content-between">
                            <a asp-controller="Products" asp-action="Details"
                               asp-route-id="@item.ProductId"
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> Xem
                            </a>

                            <form asp-controller="Wishlist" asp-action="Remove" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này khỏi danh sách yêu thích không?');">
                                    <i class="bi bi-trash"></i> Xóa
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <form asp-controller="Wishlist" asp-action="Clear" method="post" class="text-center mt-4">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-x-circle"></i> Xóa toàn bộ danh sách yêu thích
        </button>
    </form>
}
