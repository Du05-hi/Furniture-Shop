@model IEnumerable<FurnitureShop.Models.Review>
<h2>Danh sách đánh giá</h2>
<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Người dùng</th>
            <th>Sao</th>
            <th>Bình luận</th>
            <th>Ngày</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Product.Name</td>
                <td>@r.User.UserName</td>
                <td>@r.Rating / 5</td>
                <td>@r.Comment</td>
                <td>@r.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
