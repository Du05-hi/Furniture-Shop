@model IEnumerable<ShopNoiThat.Models.Product>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h2>@ViewData["Title"]</h2>
<a class="btn btn-success mb-3" asp-action="Create">Thêm sản phẩm</a>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="~/images/@(string.IsNullOrEmpty(item.Image) ? "placeholder.png" : item.Image)"
                     class="card-img-top" style="height:200px;object-fit:cover;" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="fw-bold">@item.Price.ToString("N0") ₫</p>
                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ProductId">Chi tiết</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.ProductId">Sửa</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ProductId">Xóa</a>
                </div>
            </div>
        </div>
    }
</div>
