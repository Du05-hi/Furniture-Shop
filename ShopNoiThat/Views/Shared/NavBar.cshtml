@{
    var role = Context.Session.GetString("Role");
    var userName = Context.Session.GetString("UserName");
}

<nav class="navbar navbar-expand-lg navbar-dark bg-transparent fixed-top py-3">
    <div class="container">
        <!-- Logo -->
        <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">
            ShopNoiThat
        </a>

        <!-- Toggle khi mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Menu -->
        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">Giới thiệu</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Giải pháp</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Sản phẩm</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Liên hệ</a></li>

                @* Admin link nếu role là Admin *@
                @if (role == "Admin")
                {
                    <li class="nav-item">
                        <a class="nav-link text-warning" asp-controller="Admin" asp-action="Index">Quản trị</a>
                    </li>
                }
            </ul>

            <!-- Search -->
            <form class="d-flex me-3">
                <input class="form-control me-2" type="search" placeholder="Tìm kiếm..." aria-label="Search">
                <button class="btn btn-outline-light" type="submit">Tìm</button>
            </form>

            <!-- Liên hệ -->
            <div class="d-none d-lg-flex align-items-center me-3 text-white small">
                <span class="me-3"><i class="bi bi-envelope"></i> contact@demo.com</span>
                <span><i class="bi bi-telephone"></i> 0123.456.789</span>
            </div>

            <!-- User menu -->
            <ul class="navbar-nav mb-2 mb-lg-0">
                @if (!string.IsNullOrEmpty(userName))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                            Xin chào @userName
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            @if (role == "Admin")
                            {
                                <li><a class="dropdown-item text-warning" asp-controller="Admin" asp-action="Index">Quản trị</a></li>
                            }
                            <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Đăng xuất</a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="Auth" asp-action="Login">Đăng nhập</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="Auth" asp-action="Register">Đăng ký</a></li>
                }
            </ul>

            <!-- Nút Liên hệ -->
            <a href="#" class="btn btn-success ms-3">Liên hệ</a>
        </div>
    </div>
</nav>
