@model IEnumerable<ShopNoiThat.Models.User>

<h2>Danh sách người dùng</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tên đăng nhập</th>
            <th>Email</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">Xoá</button>
                    </form>
                    <form asp-action="AddToRole" method="post" style="display:inline">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <input type="hidden" name="role" value="Admin" />
                        <button type="submit" class="btn btn-primary btn-sm">Thêm Admin</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
