@{
    ViewData["Title"] = "Trang quản trị";
}

<h2>Dashboard - Quản trị viên</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Người dùng</div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.TotalUsers</h5>
                <p class="card-text">Tổng số tài khoản trong hệ thống</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Quản trị viên</div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.TotalAdmins</h5>
                <p class="card-text">Số lượng Admin hiện có</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">Sản phẩm</div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.TotalProducts</h5>
                <p class="card-text">Tổng số sản phẩm đang bán</p>
            </div>
        </div>
    </div>
</div>
